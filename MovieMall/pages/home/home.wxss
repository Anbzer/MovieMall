/* pages/home/home.wxss */
.swiper-box image{
  width: 100%;
}
.nav-box .nav{
  overflow: hidden;
  width: 2000rpx;
}
.nav-box .nav .item{
  float: left;
  width: 60px;
  height: 60rpx;
  line-height: 60rpx;
  border: 2px solid #eee;
  text-align: center;
  font-size: 14px;
  margin-left: 6px;
  border-radius: 20rpx;
}
.nav-box .nav .item.current{
  color: gray;
}
.goods-list .item{
  display: flex;
  padding: 30rpx 20rpx;
  border-bottom: 2px solid #eee;
}
.goods-list .item .pic{
  width: 200rpx;
  height: 200rpx;
}
.goods-list .item image{
  width: 200rpx;
  height: 200rpx;
}
.goods-list .item .content{
  margin-left: 10px;
}
.goods-list .item .content .title{
  font-size: 14px;
}
.goods-list .item .content .made{
  font-size: 12px;
  color: #999;
  margin-top: 4px;
}
.goods-list .item .content .price{
  font-size: 18px;
  color: orange;
  margin-top: 4px;
}
