/* pages/my/my.wxss */
page{
  background-color: #f5f5f5;
  height: 100%;
}
.page-box{
  padding-top: 20rpx;
}
.btn-login{
  width: 100%!important;
  padding: 0;
}
.login-info{
  display: flex;
  background: white;
  padding: 20rpx 30rpx;
}
.login-info image{
  width: 160rpx;
  height: 160rpx;
}
.login-info .login{
  margin-left: 30rpx;
}
.login-info .login .top{
  font-size: 36rpx;
  margin-top: 30rpx;
}
.login-info .login .desc{
  font-size: 32rpx;
  color: #999;
  margin-top: 10rpx;
}
.member-box{
  background: white;
  margin-top: 30rpx;
}
.member-box .item{
  height: 88rpx;
  line-height: 88rpx;
  font-size: 34rpx;
  border-bottom: solid 2rpx #eee;
  padding: 0 30rpx;
}
.member-box .item .fn-right{
  float: right;
  color: rgb(214, 214, 214);
  font-size: 28rpx;
}